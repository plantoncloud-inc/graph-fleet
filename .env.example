# Graph Fleet Environment Configuration
# Copy this file to .env and fill in your actual values

# ========================================
# LLM API Keys (Required)
# ========================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# ========================================
# LangSmith Tracing (Optional but Recommended)
# ========================================
LANGSMITH_API_KEY=lsv2_...
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_PROJECT=graph-fleet-dev

# ========================================
# Local Development Only (Optional)
# ========================================
# For testing MCP tools in LangGraph Studio
# Production deployments use automatic per-user authentication
PLANTON_API_KEY=your_test_token_here

# Optional: Override Planton Cloud environment (defaults to 'live')
# PLANTON_CLOUD_ENVIRONMENT=live

# ========================================
# Additional Optional Keys
# ========================================
TAVILY_API_KEY=tvly-...  # For search functionality
DATABASE_URL=postgresql://...  # For persistent memory
GITHUB_TOKEN=ghp_...  # For proto schema fetching

# Environment
ENV=local
