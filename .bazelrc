###############################################################################
# Graph Fleet Bazel Configuration                                             #
###############################################################################

# Python toolchain settings
build --action_env=PYTHONIOENCODING=utf-8
build --action_env=PYTHONHASHSEED=0

# Enable hermetic Python toolchain
build --incompatible_use_python_toolchains=true

# Test settings
test --test_output=errors
test --test_verbose_timeout_warnings

# Build performance
build --jobs=auto
build --worker_sandboxing

# Cache settings for local development
build --disk_cache=~/.cache/bazel/graph-fleet

# Verbose failures for debugging
build --verbose_failures

